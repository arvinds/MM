<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Milemeet.com" %></title>
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
	<div class="content">
		<header>
			<div class='centerbox'>
				<div class="mm-logo">
					MileMeet :)
				</div>
				<div class="mm-settings">
					Sushant Patankar | Log Out
				</div>
			</div>
		</header>
		<div id="container" class="centerbox">
		  <% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
		  <% end %>
		  <%= content_tag :h1, yield(:title) if show_title? %>
		  <%= yield %>
		</div>
	</div>
  </body>
</html>
